    "prettier": "^3.4.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.18.0",
    "vite": "^7.2.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "chart.js": "^4.5.1"
